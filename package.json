{
  "name": "faq-accordion",
  "version": "1.0.0",
  "description": "![Design preview for the FAQ accordion coding challenge](preview.jpg)",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "sass src/scss:dist/css --watch",
    "pug": "pug src/pug --pretty --watch --out dist",
    "watch-js": "watch 'copy-files-from-to --when-file-exists overwrite' src/js",
    "dev": "concurrently \"npm run scss\" \"npm run pug\"  \"npm run watch-js\" \"live-server dist\"",

    "scss:build": "sass src/scss:dist/css --style=compressed",
    "pug:build": "pug src/pug --out dist",
    "copy-js": "copy-files-from-to src/js dist/js --when-file-exists overwrite",
    "build": "npm run scss:build && npm run pug:build && npm run copy-js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanifmaleki/Faq-Accordion.git"
  },
  "keywords": [
    "FAQs"
  ],
  "author": "Hanif Maleki hanif_1362@yahoo.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hanifmaleki/Faq-Accordion/issues"
  },
  "homepage": "https://github.com/hanifmaleki/Faq-Accordion#readme",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "copy-files-from-to": "^3.12.1",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.90.0",
    "watch": "^0.13.0"
  },
  "copyFiles": [
    {
      "from": "src/js",
      "to": "dist"
    }
  ]
}
